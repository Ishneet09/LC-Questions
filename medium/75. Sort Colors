class Solution {
public:
    void sortColors(vector<int>& nums) {
        if(nums.size() == 0)
            return;
        
        int p0 = 0;
        int p1 = 0;
        int p2 = 0;
        
        for(int num : nums){
            nums[p2] = 2;
            p2++;
            
            if(num < 2){
                nums[p1] = 1;
                p1++;
            }
            
            if(num < 1){
                nums[p0] = 0;
                p0++;
            }
        }
        
        return;
    }
};

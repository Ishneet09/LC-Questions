class Solution {
private:
    bool palindrome(string& s, int left, int right){
        while(left <= right){
            if(s[left] == s[right]){
                left++;
                right--;
            }
            else{
                return false;
            }
        }
        return true;
    }
    
public:
    bool validPalindrome(string s) {
     if(s.size() <= 1)
         return true;
        
        int left = 0;
        int right = s.size() - 1;
        
        // check normally
        while(left < right){
            if(s[left] == s[right]){
                left++;
                right--;
                continue;
            }
            else{
                // you have the choice of removing any one character
              if(palindrome(s, left + 1, right) || palindrome(s, left, right - 1))
                  return true;
                
               return false;
            } 
        }
        
        return true;
    }
};
